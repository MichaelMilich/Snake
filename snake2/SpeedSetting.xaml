<Window x:Class="Snake2.SpeedSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake2"
        mc:Ignorable="d"
        Title="choose game speed" Height="150" Width="300" SizeToContent="Height" Closing="Window_Closing">
    <StackPanel>
        <ComboBox Name="speedSelection">
            <ComboBoxItem IsSelected="True">Slow</ComboBoxItem>
            <ComboBoxItem >Medium</ComboBoxItem>
            <ComboBoxItem>Fast</ComboBoxItem>
        </ComboBox>
        <Button Content="OK" Click="OKButton_Click" />
    </StackPanel>
</Window>
